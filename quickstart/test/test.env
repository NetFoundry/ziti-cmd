# Environment
ZITI_HOME="/persistent"
## Leave blank or commented to skip related tests
ENV_FILE_PATH="/persistent/ziti.env"
## Leave blank or commented if not running in docker
DOCKER_CONTAINER_NAME="docker_ziti-controller_1"

# Controller
ZITI_EDGE_CONTROLLER_HOSTNAME="ziti-edge-controller"
ZITI_EDGE_CONTROLLER_PORT="1280"
ZITI_EDGE_CONTROLLER_RAWNAME="ziti-edge-controller"
ZITI_EDGE_CTRL_ADVERTISED_HOST_PORT="ziti-edge-controller:1280"

# Router
ZITI_EDGE_ROUTER_RAWNAME="ziti-edge-router"

# Credentials
ZITI_USER="admin"
ZITI_PWD="admin"

# Simple Service Test - Leave blank or commented if there is no local server to test against
SERVER_ADDRESS="web-test-blue"
SERVER_PORT="8000"
